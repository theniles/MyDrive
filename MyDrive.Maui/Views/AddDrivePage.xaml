<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyDrive.Maui.ViewModels"
             x:Class="MyDrive.Maui.Views.AddDrivePage"
             Title="Add Drive">
    <ContentPage.BindingContext>
        <vm:AddDriveViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout>
            <Button HorizontalOptions="Center" MaximumHeightRequest="200" Text="MongoDB" Command="{Binding AddMongoDriveCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>